@model Database.Thread
@{
    ViewBag.Title = "Show";
}

<h2>Show</h2>
<p>
    Title: @Model.Title<br />
    Author: @Model.User.Name
</p>

@foreach (var post in Model.Post)
{
    <div class="reply">
        <h4>Author: @post.User.Name</h4>
        <p>@post.Content</p>
    </div>
}

@if(Request.IsAuthenticated)
{
    @Html.ActionLink("Reply to thread", "Reply", "Thread", new { id = Model.Id }, null) <br />
}
@Html.ActionLink("Back to threads", "Index", "Thread", new { id = Model.ForumId }, null)
