@model Forum.ViewModels.ViewModelWrapper<Forum.Models.ThreadCreationModel>
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@if (Model.InnerModel.Error != null)
{
    <div style="color: #d80000">@Model.InnerModel.Error</div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.InnerModel.ForumId)

    <div>
        @Html.LabelFor(m => m.InnerModel.Thread.Title)
        @Html.TextBoxFor(m => m.InnerModel.Thread.Title)
    </div>
    
    <div>
        @Html.LabelFor(m => m.InnerModel.Post.Content)<br />
        @Html.TextAreaFor(m => m.InnerModel.Post.Content)
    </div>
    
    <input type="submit" value="Create" />
}

@Html.ActionLink("Back to threads", "Index", "Thread", new { id = Model.InnerModel.ForumId }, null)
