@model Forum.ViewModels.ThreadViewModel
@{
    ViewBag.Title = "Threads";
}

<h2>Threads</h2>

<p>
    Forum: @Model.Forum.Name
</p>

<table>
    <tr>
        <th>Author</th>
        <th>Title</th>
    </tr>
    @foreach (var thread in Model.Threads)
    {
        <tr>
            <td>@thread.User.Name</td>
            <td>@Html.ActionLink(thread.Title, "Show", new { id = thread.Id })</td>
        </tr>
    }
</table>

@if(Request.IsAuthenticated)
{
    @Html.ActionLink("Create new thread", "Create", "Thread", new { id = Model.Forum.Id }, null) <br />
}
@Html.ActionLink("Back to forums", "Index", "Forum")
