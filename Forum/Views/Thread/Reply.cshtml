@model Forum.Models.ThreadReplyModel
@{
    ViewBag.Title = "Reply";
}

<h2>Replying to thread @Model.Thread.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ThreadId)
    
    <div>
        @Html.LabelFor(m => m.Post.Content) <br />
        @Html.TextAreaFor(m => m.Post.Content)
    </div>
    
    <input type="submit" value="Reply to post" />
}

@Html.ActionLink("Back to thread", "Show", "Thread", new { id = Model.Thread.Id }, null)
